<div class ="container text-center padded">
  <div class ="row">
    <div class ="col-md-6 col-md-offset-3">
      <%= simple_form_for(@cocktail) do |f| %>
        <% if @cocktail.errors.any? %>
            <ul>
            <% @cocktail.errors.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
        <%= f.input :name %>
        <div class="actions">
          <%= f.button :submit, class: 'btn btn-primary'%>
        </div>
      <% end %>
    </div>
  </div>
</div>
